<Window x:Class="Editor.GameProject.ProjectBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.GameProject"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Activated="Window_Activated"
        Title="ProjectBrowserDialog" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <ToggleButton x:Name="OpenProjectButton" Content="Open Project" FontSize="32"
                          Click="OnToggleButtonClick"/>
            <ToggleButton x:Name="CreateProjectButton" Content="Create Project" FontSize="32" Margin="30,0,0,0"
                          Click="OnToggleButtonClick"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" x:Name="BrowserContent">
            <local:OpenProjectView />
            <local:NewProjectView />
        </StackPanel>
    </Grid>
</Window>
