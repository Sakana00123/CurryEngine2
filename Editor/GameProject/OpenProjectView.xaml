<UserControl x:Class="Editor.GameProject.OpenProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.GameProject"
             mc:Ignorable="d" Width="800"
             d:DesignHeight="450" d:DesignWidth="800" Background="#6D4C41">
    <UserControl.DataContext>
        <local:OpenProject/>
    </UserControl.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <ListBox Width="195" Height="250" ItemsSource="{Binding Projects}" x:Name="projectListBox"
                     SelectedIndex="0"
                     Background="#FFF8E1" Foreground="#6D4C41" SelectedItem="#FF7043">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Icon}" Margin="0,0,5,0" Width="32" Height="32"/>
                            <TextBlock Text="{Binding ProjectName}" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border Width="400" Height="250" Margin="5,0,0,0" Padding="10">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding Path=SelectedItem.Screenshot, ElementName=projectListBox}"/>
                </Border.Background>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
            Margin="0,30,0,0">
            <Button Content="Open" Width="96" Background="#FFB300" Foreground="#3E2723" BorderBrush="#8D6E63" IsDefault="True"/>
            <Button Content="Exit" Width="96" Background="#FFB300" Foreground="#3E2723" BorderBrush="#8D6E63" Margin="30,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</UserControl>
